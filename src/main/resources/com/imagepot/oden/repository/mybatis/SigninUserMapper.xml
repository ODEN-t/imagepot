<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace:Mapperインターフェースを指定 -->
<mapper namespace="com.imagepot.oden.repository.mybatis.SigninUserMapper">
    <!-- id:マップ名 type:紐付けるbean名 -->
    <resultMap id="user" type="com.imagepot.oden.model.User">
        <!-- id:PK column:DB  property:field -->
        <id column="user_id" property="id" />
        <result column="user_name" property="name" />
        <result column="user_email" property="email" />
        <result column="user_password" property="password" />
        <result column="user_icon" property="icon" />
        <result column="user_role" property="role" />
        <result column="user_password_updated_at" property="passwordUpdatedAt" />
        <result column="user_signin_miss_times" property="signinMissTimes" />
        <result column="user_unlock" property="unlock" />
        <result column="user_enabled" property="enabled" />
        <result column="user_updated_at" property="createdAt" />
        <result column="user_created_at" property="updatedAt" />
    </resultMap>
    <select id="findByUserId" parameterType="Integer" resultType="map">
        SELECT * from mywork.pot_user WHERE user_id = #{id};
    </select>
    <select id="selectUserRole" parameterType="Integer" resultType="String">
        SELECT user_role from mywork.pot_user WHERE user_id = #{id};
    </select>
    
</mapper>